{
  "manifest_version": 3,
  "name": "Claude Web Analyzer",
  "version": "1.8.0",
  "description": "Leitet Webseiteninhalte an Claude AI zur Analyse weiter",
  "author": "Paul Stefan",
  "homepage_url": "https://github.com/paulstefan/claude-web-analyzer",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "claude-web-extension-background-wrapper.js"
  },
  "action": {
    "default_popup": "claude-web-extension-popup.html",
    "default_icon": {
      "16": "icon16-new.png",
      "48": "icon48-new.png",
      "128": "icon128-new.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["claude-web-extension-content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16-new.png",
    "48": "icon48-new.png",
    "128": "icon128-new.png"
  }
}